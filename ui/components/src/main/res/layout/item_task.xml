<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/task_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanova_medium"
            android:textColor="@color/slate"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task_status"
            android:ellipsize="end"
            tools:text="Inbound" />

        <TextView
            android:id="@+id/task_jobId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/proximanova_semibold"
            android:maxLines="1"
            android:textColor="@color/dark_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/task_status"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_type"
            tools:text="#3072 / 93-7892" />

        <TextView
            android:id="@+id/task_locationDirectionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/proximanova_medium"
            android:textColor="@color/slate"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_jobId"
            tools:text="To" />

        <TextView
            android:id="@+id/task_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/proximanova_regular"
            android:maxLines="1"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task_expetedTallyValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_locationDirectionLabel"
            tools:text="Rig Prep Facility" />

        <TextView
            android:id="@+id/task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_rect"
            android:fontFamily="@font/proximanova_medium"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            android:textSize="12sp"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:backgroundTint="@color/green"
            tools:text="In Progress" />

        <TextView
            android:id="@+id/task_expetedTally"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/proximanova_medium"
            android:text="@string/expected_tally"
            android:textColor="@color/slate"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/task_expetedTallyValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_jobId" />

        <TextView
            android:id="@+id/task_expetedTallyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/proximanova_regular"
            android:maxLines="1"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/task_location"
            app:layout_constraintTop_toBottomOf="@id/task_expetedTally"
            tools:text="30 JT / 160,800 FT" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
