<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/tag_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:hint="Enter tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tag_find_asset"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/round_corner_rect"
        android:backgroundTint="#111111"
        android:enabled="false"
        android:text="@string/find_asset_button_text"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_entry" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/button_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tag_find_asset,tag_consume_asset" />

    <Button
        android:id="@+id/tag_consume_asset"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/consume_btn_bg_selector"
        android:text="@string/consume"
        android:textAllCaps="false"
        android:enabled="false"
        android:visibility="gone"
        tools:visibibility="visible"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/tag_reject_asset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_entry" />

    <Button
        android:id="@+id/tag_reject_asset"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/reject_btn_bg_selector"
        android:text="@string/reject"
        android:visibility="gone"
        tools:visibibility="visible"
        android:enabled="false"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tag_consume_asset"
        app:layout_constraintTop_toBottomOf="@+id/tag_entry" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_assets_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_barrier"/>

</androidx.constraintlayout.widget.ConstraintLayout>
