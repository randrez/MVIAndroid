<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/conflicts_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableStart="@drawable/ic_warning"
        android:fontFamily="@font/proximanova_semibold"
        android:gravity="center"
        android:text="@string/multiple_results_title"
        android:textColor="@color/slate"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggle_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/expand_minimize_toggle"
        android:stateListAnimator="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conflicts_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16sp"
        android:text="@string/multiple_results_desc"
        android:textColor="@color/n_900"
        android:textSize="20sp"
        android:fontFamily="@font/proximanova_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/conflicts_title"
        app:layout_constraintTop_toBottomOf="@id/conflicts_title" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/conflicts_assets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="200dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/conflicts_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conflicts_desc" />

    <Button
        android:id="@+id/conflicts_cancel"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:theme="@style/Theme.MaterialComponents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conflicts_assets"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/n_500"
        android:textSize="18sp"
        android:layout_margin="16dp"
        app:strokeColor="#516b7a"
        />

</androidx.constraintlayout.widget.ConstraintLayout>