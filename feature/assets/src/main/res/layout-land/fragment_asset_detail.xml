<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="600dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:minWidth="600dp"
            android:minHeight="400dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/asset_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/ic_chevron_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/asset_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proximanova_semibold"
                android:text="@string/asset_details"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="@id/asset_back_button"
                app:layout_constraintTop_toBottomOf="@id/asset_back_button" />

            <TextView
                android:id="@+id/asset_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/proximanova_semibold"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="@id/asset_details_label"
                app:layout_constraintTop_toBottomOf="@id/asset_details_label"
                tools:text="9-5/8â€ 53.50# P110 R-3 NEW VAM SD SMLS " />

            <com.airbnb.epoxy.EpoxyRecyclerView
                android:id="@+id/asset_detail_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/asset_description"
                tools:itemCount="20"
                tools:listitem="@layout/asset_detail_row" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>